#include "pico-8m.dts"

/ {
	/delete-node/ sound-hdmi;

	aliases {
		i2c0 = &i2c1;
		i2c1 = &i2c2;
		i2c2 = &i2c3;
		i2c3 = &i2c4;
    };

	sound_record: codec {
		compatible = "knowles,sph0645";
		
	};

	sound@1 {
		compatible = "nxp,imx-audio-tfa98xx", "nxp,imx-tfa98xx";
		nxp,model = "TFA9912";
		cpu-dai = <&sai2>;
		ssi-controller = <&sai2>;
		nxp,audio-codec = <&tfa98xx_left &tfa98xx_right>;
		clocks = <&clk IMX8MQ_AUDIO_PLL1>;
		nxp,audio-routing =
			"Speaker", "OUTL",
			"DMIC1", "Mic",
			"DMIC2", "Mic",
			"DMIC3", "Mic",
			"DMIC4", "Mic";
	};

	sound@2 {
		compatible = "nxp,imx-audio-sph0645", "nxp,imx-sph0645";
		nxp,model = "SPH0645";
		cpu-dai = <&sai3>;
		ssi-controller = <&sai3>;
		nxp,audio-codec = <&sound_record>;
		clocks = <&clk IMX8MQ_AUDIO_PLL1>;
	};
};

&iomuxc {
	pinctrl-names = "default";

	pico-8m  {

        pinctrl_sai2: sai2grp {
            fsl,pins = <
                MX8MQ_IOMUXC_SAI2_TXFS_SAI2_TX_SYNC 0xd6
                MX8MQ_IOMUXC_SAI2_TXC_SAI2_TX_BCLK  0xd6
                MX8MQ_IOMUXC_SAI2_MCLK_SAI2_MCLK    0xd6
                MX8MQ_IOMUXC_SAI2_TXD0_SAI2_TX_DATA0    0xd6
                MX8MQ_IOMUXC_NAND_WE_B_GPIO3_IO17    0xd6
            >;
        };

        pinctrl_sai3: sai3grp {
            fsl,pins = <
                MX8MQ_IOMUXC_SAI3_TXFS_SAI3_TX_SYNC 0xd6
                MX8MQ_IOMUXC_SAI3_TXC_SAI3_TX_BCLK  0xd6
                MX8MQ_IOMUXC_SAI3_RXD_SAI3_RX_DATA0 0xd6
            >;
        };
	};
};

&i2c2 {
	tfa98xx_left: tfa98xx_left@34 {
		compatible = "nxp,tfa98xx";
		reg = <0x34>;
		reset-gpio = <&gpio3 17 GPIO_ACTIVE_HIGH>; //GPIO_P31
		irq-gpio = <&gpio4 24 GPIO_ACTIVE_HIGH>; //GPIO_P35
		clocks = <&clk IMX8MQ_AUDIO_PLL1>;
	};
	tfa98xx_right: tfa98xx_right@35 {
		compatible = "nxp,tfa98xx";
		reg = <0x35>;
		clocks = <&clk IMX8MQ_AUDIO_PLL1>;
	};
};

&i2c3 { 

	clock-frequency = <100000>;

	pca9955: pca9955 {
	compatible = "nxp,pca9955";
	#address-cells = <1>;
	#size-cells = <0>;
	reg = <0x60>;

     blue@0 {
		label = "blue0";
		reg = <0>;
		linux,default-trigger = "none";
	 };
	 green@1 {
		label = "green0";
		reg = <1>;
		linux,default-trigger = "none";
	 };
	 red@2 {
		label = "red0";
		reg = <2>;
		linux,default-trigger = "none";
	 };

	 blue@3 {
		label = "blue1";
		reg = <3>;
		linux,default-trigger = "none";
	 };
	 green@4 {
		label = "green1";
		reg = <4>;
		linux,default-trigger = "none";
	 };
	 red@5 {
		label = "red1";
		reg = <5>;
		linux,default-trigger = "none";
	 };

     blue@6 {
        label = "blue2";
        reg = <6>;
        linux,default-trigger = "none";
     };
     green@7 {
        label = "green2";
        reg = <7>;
        linux,default-trigger = "none";
     };
     red@8 {
        label = "red2";
        reg = <8>;
        linux,default-trigger = "none";
     };

     blue@9 {
        label = "blue3";
        reg = <9>;
        linux,default-trigger = "none";
     };
     green@10 {
        label = "green3";
        reg = <10>;
        linux,default-trigger = "none";
     };
     red@11 {
        label = "red3";
        reg = <11>;
        linux,default-trigger = "none";
     };

	};
};

&sai2 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_sai2>;
	assigned-clocks = <&clk IMX8MQ_CLK_SAI2_SRC>,
			<&clk IMX8MQ_CLK_SAI2_DIV>;
	assigned-clock-parents = <&clk IMX8MQ_AUDIO_PLL1_OUT>;
	assigned-clock-rates = <0>, <49152000>;
	status = "okay";
};

&sai3 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_sai3>;
	assigned-clocks = <&clk IMX8MQ_CLK_SAI3_SRC>,
			<&clk IMX8MQ_CLK_SAI3_DIV>;
	assigned-clock-parents = <&clk IMX8MQ_AUDIO_PLL1_OUT>;
	assigned-clock-rates = <0>, <24576000>;
	status = "okay";
};

&dcss {
    status = "disabled";
};

&hdmi {
    status = "disabled";
};

&gpu {
    status = "disabled";
};

&vpu {
    status = "disabled";
};

